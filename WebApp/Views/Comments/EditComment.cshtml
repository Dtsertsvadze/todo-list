@model CommentResponse

<form asp-action="EditComment" asp-controller="Comments" method="post">
    <input type="hidden" name="commentId" value="@ViewBag.CommentId" />
    <input type="hidden" name="taskId" value="@ViewBag.TaskId" />

    <div class="form-group">
        <label for="Content">Comment</label>
        <textarea class="form-control" id="Content" name="Content" rows="3">@Model?.Content</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save changes</button>
</form>