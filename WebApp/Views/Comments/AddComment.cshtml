@model CommentAddRequest
@{
    ViewData["Title"] = "Add Comment";
}

<div class="container mt-4">
    <h2>Add Comment</h2>
    <form asp-controller="Comments" asp-action="AddComment"
          asp-route-todoListId="@ViewBag.TodoListId"
          asp-route-taskId="@ViewBag.TaskId"
          method="post">
        <div class="form-group">
            <label asp-for="Content">Comment:</label>
            <textarea asp-for="Content" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Submit Comment</button>
    </form>

    <div class="mt-3">
        <a asp-controller="Tasks" asp-action="Get"
           asp-route-toDoListId="@ViewBag.TodoListId"
           asp-route-taskId="@ViewBag.TaskId"
           class="btn btn-secondary">Back to Task</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}